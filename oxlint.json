{
	"$schema": "./node_modules/oxlint/configuration_schema.json",
	"plugins": ["react", "typescript", "import"],
	"env": {
		"browser": true,
		"es2024": true,
		"node": true
	},
	"rules": {
		"no-unused-vars": "warn",
		"no-console": "warn",
		"eqeqeq": "warn",
		"react-hooks/rules-of-hooks": "error",
		"react-hooks/exhaustive-deps": "warn"
	},
	"ignorePatterns": [
		"node_modules",
		"dist",
		"build",
		".next",
		"*.gen.ts",
		"*.gen.js"
	]
}
