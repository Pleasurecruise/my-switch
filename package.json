{
	"name": "my-monorepo",
	"private": true,
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"scripts": {
		"dev": "turbo dev --filter=@my-monorepo/tauri",
		"build": "turbo build --filter=@my-monorepo/tauri",
		"build:ui": "turbo build --filter=@my-monorepo/ui",
		"lint": "turbo lint && manypkg check",
		"lint:fix": "turbo lint:fix",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"check-types": "turbo check-types",
		"precommit": "bun run format:check && bun run lint && bun run check-types",
		"precommit:fix": "bun run format && bun run lint:fix"
	},
	"devDependencies": {
		"@biomejs/biome": "latest",
		"@manypkg/cli": "latest",
		"@tailwindcss/vite": "latest",
		"@types/react": "latest",
		"@types/react-dom": "latest",
		"@vitejs/plugin-react": "latest",
		"oxlint": "latest",
		"react": "latest",
		"react-dom": "latest",
		"rolldown": "latest",
		"turbo": "latest",
		"typescript": "latest",
		"vite": "latest",
		"vite-tsconfig-paths": "latest"
	},
	"packageManager": "bun@1.3.6"
}
